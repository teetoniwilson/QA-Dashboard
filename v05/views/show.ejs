	<button type="submit" class="btn btn-danger">Delete</button>
</form>

	 <% lessonlearnedlog.comments.forEach(function(comment){ %>
			<p>
				<strong><%=comment.author %></strong> - <%= comment.text%>
			</p>
     <%}) %>




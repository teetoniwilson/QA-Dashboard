<%- include("partials/header") %>

<h1><%=lessonlearnedlog.title %> </h1>	

<p><%=lessonlearnedlog.description %></p>

<img src="<%=lessonlearnedlog.image %>">
<p>
	<%= lessonlearnedlog.created.toDateString() %>
</p>
<a class="btn btn-primary" href="/lessonslearnedlogs" role="button">Back</a>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>ISSUE LOGS PAGE!!!</h1>
			<p>
				<a class="btn btn-primary btn-large" href="/issuelogs/new">Add New Issue</a>
			</p>			
		</div>		
	</header>	
	
	<div class="row">
		<div class="col-lg-12">
			<h3>Latest Issues!</h3>			
		</div>		
	</div>
	
	<div class="row">	
		<% issuelog..reverse().forEach(function(issue){ %>
		<div class="col-md-3 col-sm-6">
			<div class="card text-white <% if(issue.severity=="High") {%>
					bg-danger
					<% } else if (issue.severity=="Medium") { %>
					bg-warning 	
					<% }else{%>
					bg-success 	
					<%}%>
					mb-3"  style="max-width: 18rem;" <%if(issue.comment){ %>
						 data-toggle="tooltip" data-placement="bottom" title="<%= issue.comment %>"
						 <%};%>>
					<!-- card-header next -->
					<div class="card-header">
						<div class="d-flex justify-content-between align-items-start">
						<div><h4><%= issue.section %></h4></div>	
						<div class="badge badge-light">S<%= issue.sprint %></div>					
					</div>
					<p><small class="text-white-50 float-right"><%=issue.severity %></small></p>				
				</div>	
			<div class="progress">
				<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0"            				aria-valuemax="100" style="width: 75%"></div>
			</div>
				<div class="card-body">   
    				<p class="card-text"><%= issue.title %></p>
					<a href="<%=issue.issueUrl %>" target="_blank" class="btn btn-primary"><%=issue.issueId %></a>
  				</div>
				<!-- card-footer next -->
				<div class="card-footer">
                	<small class="text-white-50">- <%=issue.author %></small>
            	</div>
			</div>
		</div> 			 
		<% }); %>
	</div>	
</div>






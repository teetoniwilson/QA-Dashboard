<%- include("../partials/header") %>

<div class="container">
	<h1>Edit Comment </h1>
                                
	<form action="/lessonlearnedlogs/<%=lessonlearnedlog_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">		
				
		<div class="form-group">
		 	<label for="description">Edit Comment:</label>
		  	<textarea class="form-control" rows="10" name="comment[text]"><%=comment.text%></textarea>			
		</div>
		
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
			<a href="/lessonlearnedlogs/<%=lessonlearnedlog_id%>" class="btn btn-secondary">Cancel</a>
		</div> 
		
	</form>
	
	<%- include("../partials/footer") %>	
</div>





<%- include("partials/header") %>
<div class="container col-md-4">
	

<div class="card text-center">
  <div class="card-header">
    <h3>Login </h3>
  </div>
  <div class="card-body">
	  <form action="/login" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
	  <div class="d-flex justify-content-start">
			  <div class="input-group-prepend loginIcon">
				<span class="input-group-text loginIcon"><i class="bi bi-at"></i></span>
			  </div>
			<input type="email" class="form-control"  name="username" placeholder="Email" required>   
		  </div>
	  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
	  <div class="d-flex justify-content-start">
	    <div class="input-group-prepend loginIcon">
			<span class="input-group-text loginIcon"><i class="bi bi-key-fill"></i></span>
	    </div>
    	<input type="password" class="form-control" name="password" placeholder="Password" required>
	 </div>
  </div>
  
  <button type="submit" class="btn btn-primary" name="loginBtn">Submit</button>
</form>
   
  </div>
  <div class="card-footer text-muted">
   <a href="/forgot">Forget Password</a>
  </div>
</div>
	
	

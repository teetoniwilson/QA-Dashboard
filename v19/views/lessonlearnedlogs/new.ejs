<%- include("../partials/header") %>

<div class="container">
	<h1>Create a new Lesson Learned Log </h1>

	<form action="/lessonlearnedlogs" method="POST">
		<div class="form-group row">
			<div class="col-md-3">
				 <label for="section">App Section:</label>
				 <input type="text" class="form-control" name ="section"  placeholder="Section" maxlength="20">
			</div>			
		</div>
		<div class="form-group row">
			<div class="col-md-6">	
				<label for="title">Title:</label>
			   	<input type="text" class="form-control" name="title" placeholder="Title" maxlength="50">				
			</div>			
		</div>
		
		<div class="form-group">
		 	<label for="description">Description:</label>
		  	<textarea class="form-control" rows="10" name="description"maxlength="2000"></textarea>
		</div>
		
		<div class="form-group row">
			<div class="col-md-12">	
				<label for="image">Image Url:</label>
			   	<input type="text" class="form-control" name="image" placeholder="Image Url">				
			</div>			
		</div>

		
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
			<a href="/lessonlearnedlogs/index" class="btn btn-secondary">Cancel</a>
		</div> 


	</form>
	
	<%- include("../partials/footer") %>	
</div>





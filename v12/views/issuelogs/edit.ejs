<%- include("../partials/header") %>

<div class="container">
	<h1>Edit <%=issuelog.title%> Issue</h1>
    

	<form action ="/issuelogs/<%=issuelog._id%>?_method=PUT" method="POST"> 
		
		<div class="form-group row">
			
			<div class="col-md-3">
				<label for="section">App Section</label>
				<input type="text" class="form-control" placeholder="App Section" name ="issuelog[section]" value ="<%=issuelog.section%>" required>			
			</div>
		</div>
		
		<div class="form-row">
			
			<div class="col-md-6">
				<label for="title">Issue Title</label>
				<input type="text" class="form-control" placeholder="Issue Title" name ="issuelog[title]" value ="<%=issuelog.title%>" required>
			</div>
			<div class="col-md-6">
				    <label for="issueUrl">Issue Url</label>
					<input type="text" class="form-control" placeholder="Issue url" name ="issuelog[issueUrl]" value ="<%=issuelog.issueUrl%>" required>
			</div>
		</div>
		
		<div class="form-group row">
			<div class="form-group col-md-1">
			  <label for="sprint">Sprint</label>
			  <input type="number" min="1" class="form-control" id="sprint" name="issuelog[sprint]" value ="<%=issuelog.sprint%>" required>
			</div>
			<div class="form-group col-md-2">
				 <label for="severity">Severity</label>
				 <select id="severity" class="form-control" name="issuelog[severity]" value ="<%=issuelog.severity%>">
					 <% if(issuelog.severity=="Low"){ %>
					   <option>High</option>
					   <option>Medium</option>
					   <option selected>Low</option>
					 <% }%>
					 <% if(issuelog.severity=="Medium"){ %>
					   <option>High</option>
					   <option selected>Medium</option>
					   <option>Low</option>
					 <% }%>
					 <% if(issuelog.severity=="High"){ %>
					   <option selected>High</option>
					   <option>Medium</option>
					   <option>Low</option>
					 <% }%>
				 </select>
		    </div>			

			
			<div class="form-group col-md-1">
			  <label for="occurance">Occurance</label>
			  <input type="number" min="1" class="form-control" id="occurance" name= "issuelog[occurance]" value ="<%=issuelog.occurance%>" required>
			</div>
			
			<div class="custom-control custom-radio custom-control-inline ">
			  <input type="radio" id="Fixed" name="issuelog[fixed]" class="custom-control-input">
			  <label class="custom-control-label" for="Fixed"  style=" top : 40px">Fixed</label>
			</div>
			<div class="custom-control custom-radio custom-control-inline">
			  <input type="radio" id="NotFixed" name="issuelog[fixed]" class="custom-control-input" checked>
			  <label class="custom-control-label" for="NotFixed" style=" top : 40px">Not Fixed</label>
			</div>	
		</div>
		<div class="form-group row">
				<label for="comment">Comment</label>
				<textarea class="form-control" id="comment" rows="3" name="issuelog[comment]"><%=issuelog.comment%></textarea>
		</div>	
	    
	    
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Submit</button>
			<a href="/issuelogs/index" class="btn btn-secondary">Cancel</a>
		</div> 
			
	</form>
	
		
</div>


<%- include("../partials/footer") %>